""""""VI Settings""""""
set ic
set showmode
"
""""""Key Mapping""""""
"
"Up arrow: ctrl+v up-arrow ctrl+v esc ka
map! OA ka 
"Down arrow: ctrl+v down-arrow ctrl+v esc ja
map! OB ja
"Right arrow: ctrl+v right-arrow ctrl+v esc la
map! OC la
"Left arrow: ctrl+v left-arrow ctrl+v esc ha
map! OD ha
"Backspace key to del: ctrl+v backspace ctrl+v ctrl+h
map!  
"Backspace key to del: ctrl+v backspace x
map  x
"Del key to del: ctrl+v del ctrl+v ctrl+h
map! [3~ 
"Del key to del: ctrl+v del x
map [3~ x
"End key to $: ctrl+v end $
map OF $
"Home key to ^: ctrl+v home ^
map OH ^
"Page Down to ctrl+f: ctrl+v pagedown ctrl+v ctrl+f
map [6~ 
"Page Up to ctrl+b: ctrl+v pageup ctrl+v ctrl+b
map [5~ 
